<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/caja4_med_add"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Introduce la duración total en días del tratamiento"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/caja3_med_add"
        tools:layout_editor_absoluteX="11dp" />

    <EditText
        android:id="@+id/caja1_med_add"
        android:layout_width="350dp"
        android:layout_height="41dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:hint="Introduce el nombre del medicamento"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="53dp" />

    <EditText
        android:id="@+id/caja2_med_add"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Introduce la dosis para cada toma"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/caja1_med_add"
        tools:layout_editor_absoluteX="11dp" />

    <EditText
        android:id="@+id/caja3_med_add"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Introduce el número de tomas diarias"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/caja2_med_add"
        tools:layout_editor_absoluteX="11dp" />

    <EditText
        android:id="@+id/caja5_med_add"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Introduce la hora de la primera toma"
        android:inputType="time"
        app:layout_constraintTop_toBottomOf="@+id/caja4_med_add"
        tools:layout_editor_absoluteX="11dp" />

    <EditText
        android:id="@+id/caja6_med_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintStart_toEndOf="@+id/label1_med_add"
        app:layout_constraintTop_toBottomOf="@+id/caja5_med_add" />

    <TextView
        android:id="@+id/label1_med_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Siguiente toma:"
        app:layout_constraintTop_toBottomOf="@+id/caja5_med_add"
        tools:layout_editor_absoluteX="21dp" />

    <EditText
        android:id="@+id/caja7_med_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="101dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label2_med_add" />

    <TextView
        android:id="@+id/label2_med_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp"
        android:text="Fecha fin de tratamiento"
        app:layout_constraintBottom_toTopOf="@+id/caja7_med_add"
        app:layout_constraintTop_toBottomOf="@+id/caja6_med_add"
        tools:layout_editor_absoluteX="129dp" />

    <Button
        android:id="@+id/button1_med_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="162dp"
        android:text="AÑADIR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/caja7_med_add" />

</androidx.constraintlayout.widget.ConstraintLayout>